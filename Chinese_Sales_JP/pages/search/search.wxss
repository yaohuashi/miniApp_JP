/* pages/serach/search.wxss */

.serachbutton {
  /**margin-top: 30px;**/
  height: 80rpx;
  width: 93%;
  background-color: rgb(255, 255, 255);
  color: rgba(204, 199, 199, 0.911);
  border-radius: 98rpx;
  border-color: black;
  border-style: solid;
  box-shadow: 0px 1px 2px 1px #ddd;
  border-width: 0rpx;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 750rpx;
  height: 80rpx;
  padding-top: 2%;
  padding-left: 30rpx;
  border-radius: 10rpx;
}

/* 搜索框提示文字样式 */

.search-input {
  width: 70%;
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 25rpx;
  background-color: whitesmoke;
}

.left {
  text-align: left;
}

/* 搜索框小图标 */

.search-image {
  background-color: whitesmoke;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 15rpx;
  width: 40rpx;
  height: 40rpx;
}

.search-text {
  margin-left: 25rpx;
  font-weight: 5rpx;
  font-size: 35rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.search-button-text {
  font-weight: 50rpx;
  font-size: 33rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 20rpx;
}

.search-button-view {
  flex-direction: row;
  flex-wrap: wrap;
  display: flex;
  width: 750rpx;
}

.search-button-block {
  border-width: 0rpx;
  border-color: black;
}

.search-button {
  border-style: solid;
  border: none;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  text-align: center;
  font-size: 25rpx;
  height: 50rpx;
  background-color: whitesmoke;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.search-history-view {
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.search-history-icon {
  padding-right: 50rpx;
  width: 25rpx;
  height: 25rpx;
}

.search-history-block {
  display: flex;
  flex-direction: column-reverse;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.search-history-text {
  padding-left: 30rpx;
}

.search-line {
  margin-top: 10rpx;
  margin-left: 20rpx;
}
